<!--登录以及注册页-->
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="x-ua-compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/lib/bootstrap.css">
    <link rel='stylesheet' href='/stylesheets/login.css' />
    <!--<link rel="stylesheet" href="/stylesheets/common.css">-->
    <script data-main="/javascripts/config/loginConfig.js" src="/javascripts/lib/require.js"></script>
</head>
<body>
<!--背景-->
<div id="backgroundImg"></div>
<%- include header%>
<div class="container total">
    <div class="row">
            <div class="col-md-8 col-md-offset-2">
                    <div class="choose-div">
                        <div class="signup-choose" id="signupTitle">注册</div>
                        <div class="login-choose" id="loginTitle">登录</div>
                    </div>
                    <div class="login-div">
                        <div class="icon-div">

                        </div>
                        <div class="input-div">
                            <fieldset>
                                <legend id="action">用户登录</legend>
                                <div class="form-group">
                                    <label>账 户</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">@</span>
                                        <input type="email" class="form-control" placeholder="请输入邮箱" id="email">
                                        <span class="input-group-addon"><span id="emailStatus"></span></span>
                                    </div>
                                </div>
                                <div class="form-group" id="nameCheck">
                                    <label>昵 称</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                        <input type="text" class="form-control" placeholder="请输入昵称" id="name">
                                        <span class="input-group-addon"><span id="nameStatus"></span></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>密 码</label>
                                    <div class="input-group">
                                        <span class="input-group-addon glyphicon glyphicon-alert"></span>
                                        <input type="password" class="form-control" placeholder="请输入密码" id="password">
                                        <span class="input-group-addon"><span id="pwdStatus"></span></span>
                                    </div>
                                </div>
                                <div class="form-group" id="pswCheckGroup">
                                    <label>密码</label>
                                    <div class="input-group">
                                        <span class="input-group-addon glyphicon glyphicon-alert"></span>
                                        <input type="password" class="form-control" placeholder="请重复密码" id="pswCheck">
                                        <span class="input-group-addon"><span id="rePswStatus"></span></span>
                                    </div>
                                </div>
                                <div class="checkbox">
                                    <label><input type="checkbox" id="rememberPsw">记住密码</label>
                                </div>
                                <button class="btn btn-default" id="ok">确 认</button>
                            </fieldset>

                        </div>
                    </div>
            </div>
</div>
<!--模态弹窗口组件-->
<%-include modalWindow.ejs%>
</body>
</html>