<!--起始主页-->
<!DOCTYPE html>
<html>
  <head>
      <title>Q站:)可爱的小站</title>
      <meta name="description" content="Q站，二次元之家" />
      <meta name="keywords" content="二次元,番剧，漫画，动漫，视频，新闻" />

      <link rel="stylesheet" href="/stylesheets/lib/bootstrap.min.css">
      <link rel='stylesheet' href='/stylesheets/index.css' />
      <link rel="stylesheet" href="/stylesheets/common.css">
      <script data-main="/javascripts/config/indexConfig.js" src="/javascripts/lib/require.js"></script>

  </head>
  <body>
  <!--class的优先级低于ID低于内联-->
  <div id="backgroundImg"></div>
  <%- include header%>
  <!--内容导航-->
  <div class="container opacityAlmost" id="navContent">
      <div class="row">
          <div class="col-md-2">
              <div class="icon col-md-12">
                  <img src="/images/icon/nico.jpg" class="iconBorder" id="iconPopover" data-container="body"
                       data-toggle="popover" data-original-title="Qwaii" data-trigger="click"
                       data-placement="bottom" data-content="Q站是个人开发的兴趣小站...">
              </div>
          </div>
          <div class="col-md-10 navBorder">
              <div class="col-md-2 contentNav">番剧</div>
              <div class="col-md-2 contentNav">视频</div>
              <div class="col-md-2 contentNav">音乐</div>
              <div class="col-md-2 contentNav">图片</div>
              <div class="col-md-2 contentNav">贴文</div>
              <div class="col-md-2 contentNav">萌物</div>
              <div class="col-md-2 contentNav">漫画</div>
              <div class="col-md-2 contentNav">其它</div>
          </div>
      </div>
  </div>
<!--热点导航-->
  <div class="container" id="hotView">
      <div class="row">
          <div class="col-md-6">
              <div data-ride="carousel" class="carousel slide" id="carousel-container">
                  <!--图片容器-->
                  <div class="carousel-inner">
                      <div class="item"><img src="/images/icon/hot.jpg" class=""></div>
                      <div class="item active"><img src="/images/icon/hot2.jpg" class=""></div>
                      <div class="item"><img src="/images/icon/hot3.jpg" class=""></div>
                  </div>
                  <!--圆圈指示符-->
                  <ol class="carousel-indicators">
                      <li data-slide-to="0" data-target="#carousel-container"></li>
                      <li data-slide-to="1" data-target="#carousel-container" class="active"></li>
                      <li data-slide-to="2" data-target="#carousel-container"></li>
                  </ol>
                  <!--左右控制按钮-->
                  <a data-slide="prev" href="#carousel-container" class="left carousel-control">
                      <span class="glyphicon glyphicon-chevron-left"></span>
                  </a>
                  <a data-slide="next" href="#carousel-container" class="right carousel-control">
                      <span class="glyphicon glyphicon-chevron-right"></span>
                  </a>
              </div>
          </div>
          <div class="col-md-6">
                  <div class="navTabsBorder">
                      <ul class="nav nav-tabs">
                          <li ><a href="#hotPicture" data-toggle="tab"><span id="hotPictureSpan" class="glyphicon glyphicon-fire">图片</span></a></li>
                          <li class="active"><a href="#hotArticle" data-toggle="tab"><span id="hotArticleSpan" class="glyphicon glyphicon-fire">贴文</span></a></li>
                          <li><a href="#hotVideo" data-toggle="tab"><span id="hotVideoSpan" class="glyphicon glyphicon-fire">视频</span></a></li>
                      </ul>
                      <div class="tab-content hotTitle">
                          <div class="tab-pane fade" id="hotPicture">
                          </div>
                          <div class="tab-pane fade in active" id="hotArticle">
                          </div>
                          <div class="tab-pane fade" id="hotVideo">
                          </div>
                      </div>
                  </div>
          </div>
      </div>
  </div>

  <div class="container total">
      <div class="row">
          <div class="col-md-8" id="articleList">
              <!--贴文列表-->
          </div>
          <div class="col-md-4">
              <div class="col-md-12 hotTagDiv">
                  <div class="col-md-4 col-md-offset-8 hotTagTitle">热门标签</div>
                  <div class="hotTag">热门</div>
                  <div class="hotTag">热门</div>
                  <div class="hotTag">热门</div>
                  <div class="hotTag">热门的的</div>
                  <div class="hotTag">热门的的</div>
                  <div class="hotTag">热门的的</div>
                  <div class="hotTag">热门的的</div>
              </div>

              <div class="friendLinkDiv col-md-12">
                  <div class="col-md-4 col-md-offset-8 friendLink">友情链接</div>
                  <div class="col-md-12">
                      <a class="friendLinkA" href="http://www.missevan.com"><img class="border" src="/images/links/missevan.png"></a>
                      <a class="friendLinkA" href="http://www.17173.com/"><img class="border" src="/images/links/171737.png"></a>
                      <a class="friendLinkA" href="http://www.buka.cn/"><img class="border" src="/images/links/buka.png"></a>
                      <a class="friendLinkA" href="http://www.acgcp.com/"><img class="border" src="/images/links/mencg.png"></a>
                      <a class="friendLinkA" href="http://www.qingman.cc/"><img class="border" src="/images/links/qingmanhua.png"></a>
                      <a class="friendLinkA" href="http://comic.sina.com.cn/"><img class="border" src="/images/links/sina.png"></a>
                      <a class="friendLinkA" href="http://comic.qq.com/"><img class="border" src="/images/links/tencent.png"></a>
                      <a class="friendLinkA" href="http://www.bilibili.com/"><img class="border" src="/images/links/bilibili.jpg"></a>
                      <a class="friendLinkA" href="http://acg.gamersky.com/"><img class="border" src="/images/links/youmin.jpg"></a>
                      <a class="friendLinkA" href="http://www.hexieshe.com/"><img class="border" src="/images/links/hexie.jpg"></a>
                  </div>

              </div>
          </div>
      </div>
  </div>

<!--分页导航-->
  <div class="container" >
      <ul class="pagination" id="pageNav">
          <li><a id="first">首页</a></li>
          <li class="pageNumber"><a>1</a></li>
          <li class="pageNumber"><a>2</a></li>
          <li class="pageNumber"><a>3</a></li>
          <li class="pageNumber"><a>4</a></li>
          <li class="pageNumber"><a>5</a></li>
